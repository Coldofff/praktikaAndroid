<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextRegisterStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="card_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="profile_fields_name">
        <item name="android:textColor">@color/profile_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:layout_marginTop">25sp</item>
    </style>

    <style name="profile_fields">
        <item name="backgroundTint">@color/profile_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">11sp</item>
    </style>

    <style name="AddRoomTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/profile_gray</item>
        <item name="android:layout_marginTop">30sp</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <style name="RoomTitle">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <style name="RoomNumber">
        <item name="android:textSize">58sp</item>
        <item name="android:textColor">@color/app_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NearRoomTitle" parent="RoomTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/profile_gray</item>
    </style>


    <style name="TabWidgetTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>