<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="180dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="160sp"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewHomePageItem"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/room_name_living_room__selected_off" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Living Room"
                android:textColor="@color/app_red"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/sfprodisplay_regular"
                app:layout_constraintEnd_toEndOf="@+id/imageViewHomePageItem"
                app:layout_constraintStart_toStartOf="@+id/imageViewHomePageItem"
                app:layout_constraintTop_toBottomOf="@+id/imageViewHomePageItem" />

            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="x3 Devices"
                android:textSize="14sp"
                android:fontFamily="@font/sfprodisplay_regular"
                app:layout_constraintEnd_toEndOf="@+id/textViewTitle"
                app:layout_constraintStart_toStartOf="@+id/textViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>